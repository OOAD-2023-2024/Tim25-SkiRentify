@model SkyRentifyAplikacija.Models.Snowboard

@{
    ViewData["Title"] = "Create";
}

<h4>Unesite sljedeće podatke za snowboard:</h4>

<div class="form-container">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="duzina" class="control-label"></label>
            <input asp-for="duzina" class="form-control" placeholder="Unesite dužinu snowboarda" />
            <span asp-validation-for="duzina" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="cijena" class="control-label"></label>
            <input asp-for="cijena" class="form-control" placeholder="Unesite cijenu snowboarda" />
            <span asp-validation-for="cijena" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="marka" class="control-label"></label>
            <input asp-for="marka" class="form-control" placeholder="Unesite marku snowboarda" />
            <span asp-validation-for="marka" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="materijal" class="control-label"></label>
            <input asp-for="materijal" class="form-control" placeholder="Unesite materijal snowboarda" />
            <span asp-validation-for="materijal" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Kreiraj snowboard</button>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index" class="btn btn-back">Nazad na listu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
