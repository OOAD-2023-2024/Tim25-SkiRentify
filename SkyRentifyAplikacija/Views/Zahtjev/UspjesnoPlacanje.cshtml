@model SkyRentifyAplikacija.Models.Zahtjev

@{
    ViewData["Title"] = "Uspješno Plaćanje";
}

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        margin: 0;
        background-image: url('https://i.ibb.co/wpCmNF9/plava-pozadina.jpg');
        background-repeat: no-repeat;
        background-size: cover;
    }

    .thank-you-container {
        text-align: center;
        padding: 50px;
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 10px;
        margin: 50px auto;
        width: 60%;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .thank-you-title {
        color: darkorange;
        font-size: 2em;
        margin-bottom: 20px;
    }

    .thank-you-message {
        font-size: 1.2em;
        color: #333;
        margin-bottom: 30px;
    }

    .thank-you-details {
        font-size: 1em;
        color: #555;
        margin-bottom: 20px;
    }

    .btn-home {
        background-color: darkorange;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        font-size: 1em;
        transition: background-color 0.3s;
    }

        .btn-home:hover {
            background-color: orangered;
        }
</style>

<div class="thank-you-container">
    <div class="thank-you-title">Hvala Vam!</div>
    <div class="thank-you-message">
        Vaša uplata je uspješno obrađena.
    </div>
    <div class="thank-you-details">
        <p>Vaš zahtjev ID je: <strong>@Model.Id</strong></p>
    </div>
    <a href="@Url.Action("Index", "Home")" class="btn-home">Povratak na početnu stranicu</a>
</div>

