@model SkyRentifyAplikacija.Models.Zahtjev

@{
    ViewData["Title"] = "Edit";
}

<style>
    .form-control::placeholder {
        color: #495057;
    }

    body {
        font-family: Arial, Helvetica, sans-serif;
        margin: 0;
        background-image: url('https://i.ibb.co/wpCmNF9/plava-pozadina.jpg');
        background-repeat: no-repeat;
        background-size: cover;
    }

    h2 {
        text-align: center;
        color: darkorange;
        margin-top: 20px;
    }

    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 70vh; /* Centers vertically on the screen */
    }

        .form-container form {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 400px;
            max-width: 100%;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        color: darkorange;
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    .btn-primary {
        background-color: darkorange;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
        font-size: 16px;
    }

        .btn-primary:hover {
            background-color: orangered;
        }

    .text-danger {
        color: red;
        font-size: 12px;
    }
</style>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="datumPodnosenjaZahtjeva" class="control-label"></label>
                <input asp-for="datumPodnosenjaZahtjeva" class="form-control" />
                <span asp-validation-for="datumPodnosenjaZahtjeva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="datumIzdavanjaUsluge" class="control-label"></label>
                <input asp-for="datumIzdavanjaUsluge" class="form-control" />
                <span asp-validation-for="datumIzdavanjaUsluge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="datumZavrsetkaUsluge" class="control-label"></label>
                <input asp-for="datumZavrsetkaUsluge" class="form-control" />
                <span asp-validation-for="datumZavrsetkaUsluge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KlijentId" class="control-label"></label>
                <select asp-for="KlijentId" class="form-control" asp-items="ViewBag.KlijentId"></select>
                <span asp-validation-for="KlijentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cijena" class="control-label"></label>
                <input asp-for="cijena" class="form-control" />
                <span asp-validation-for="cijena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="popust" class="control-label"></label>
                <input asp-for="popust" class="form-control" />
                <span asp-validation-for="popust" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="placeno" /> @Html.DisplayNameFor(model => model.placeno)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}