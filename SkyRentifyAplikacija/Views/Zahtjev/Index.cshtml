@model IEnumerable<SkyRentifyAplikacija.Models.Zahtjev>

@{
    ViewData["Title"] = "Pregled zahtjeva";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            margin: 0;
            background-image: url('https://i.ibb.co/wpCmNF9/plava-pozadina.jpg');
            background-repeat: repeat;
            background-size: cover;
        }

        .container {
            background: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 30px;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            color:darkorange;
        }

        .btn-primary {
            background-color: darkorange;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 30%;
            font-size: 16px;
            align-items: center;
            align-content:center;
        }

            .btn-primary:hover {
                background-color: orangered;
            }

        table {
            background: seashell;
            border-radius: 10px;
            overflow: hidden;
        }

        th, td {
            text-align: center;
            vertical-align: middle;
        }

        th {
            background: darkorange;
            color: black;
        }

        .btn-container {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Pregled svih zahtjeva</h1>

        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.datumPodnosenjaZahtjeva)</th>
                    <th>@Html.DisplayNameFor(model => model.datumIzdavanjaUsluge)</th>
                    <th>@Html.DisplayNameFor(model => model.datumZavrsetkaUsluge)</th>
                    <th>@Html.DisplayNameFor(model => model.klijent)</th>
                    <th>@Html.DisplayNameFor(model => model.cijena)</th>
                    <th>@Html.DisplayNameFor(model => model.popust)</th>
                    <th>@Html.DisplayNameFor(model => model.placeno)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.datumPodnosenjaZahtjeva)</td>
                        <td>@Html.DisplayFor(modelItem => item.datumIzdavanjaUsluge)</td>
                        <td>@Html.DisplayFor(modelItem => item.datumZavrsetkaUsluge)</td>
                        <td>@Html.DisplayFor(modelItem => item.klijent.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.cijena)</td>
                        <td>@Html.DisplayFor(modelItem => item.popust)</td>
                        <td>@Html.DisplayFor(modelItem => item.placeno)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalji</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Izbriši</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
<div>
    <a asp-action="Index" asp-controller="Home">Back to Home</a>
</div>
</html>
