@model SkyRentifyAplikacija.Models.Zahtjev

@{
    ViewData["Title"] = "Create";
}

<style>
    .form-control::placeholder {
        color: #495057;
    }

    body {
        font-family: Arial, Helvetica, sans-serif;
        margin: 0;
        background-image: url('https://i.ibb.co/wpCmNF9/plava-pozadina.jpg');
        background-repeat: no-repeat;
        background-size: cover;
    }

    h4 {
        text-align: center;
        color: darkorange;
        margin-top: 20px;
    }

    .form-container {
        display: flex;
        justify-content: center;
        margin-top: 30px;
    }

        .form-container form {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 400px;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        color: darkorange;
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    .btn-primary {
        background-color: darkorange;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
        font-size: 16px;
    }

        .btn-primary:hover {
            background-color: orangered;
        }

    .text-danger {
        color: red;
        font-size: 12px;
    }
</style>

<h4>Unesite sljedeće podatke:</h4>

<div class="form-container">
    <form asp-action="Create" method="post" id="formaUnosa">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label asp-for="klijent.ime" class="control-label"></label>
            <input asp-for="klijent.ime" class="form-control" placeholder="Unesite ime" />
            <span asp-validation-for="klijent.ime" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="klijent.prezime" class="control-label"></label>
            <input asp-for="klijent.prezime" class="form-control" placeholder="Unesite prezime" />
            <span asp-validation-for="klijent.prezime" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="klijent.brojTelefona" class="control-label"></label>
            <input asp-for="klijent.brojTelefona" class="form-control" placeholder="Unesite broj telefona" />
            <span asp-validation-for="klijent.brojTelefona" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="klijent.email" class="control-label"></label>
            <input asp-for="klijent.email" class="form-control" placeholder="Unesite email" />
            <span asp-validation-for="klijent.email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="klijent.visina" class="control-label"></label>
            <input asp-for="klijent.visina" class="form-control" placeholder="Unesite visinu" />
            <span asp-validation-for="klijent.visina" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="klijent.nivoVjestine" class="control-label"></label>
            @Html.DropDownListFor(model => model.klijent.nivoVjestine, (SelectList)ViewBag.VjestinaTipovi, new { @class = "form-control" })
            <span asp-validation-for="klijent.nivoVjestine" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="datumIzdavanjaUsluge" class="control-label"></label>
            <input asp-for="datumIzdavanjaUsluge" class="form-control" placeholder="Unesite datum izdavanja usluge" />
            <span asp-validation-for="datumIzdavanjaUsluge" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="datumZavrsetkaUsluge" class="control-label"></label>
            <input asp-for="datumZavrsetkaUsluge" class="form-control" placeholder="Unesite datum završetka usluge" />
            <span asp-validation-for="datumZavrsetkaUsluge" class="text-danger"></span>
        </div>
        <div class="dalje-button">
            <button type="submit" class="btn btn-primary">Idi na odabir opreme</button>
        </div>
    </form>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var inputs = document.querySelectorAll(".form-control");

        inputs.forEach(function (input) {
            var label = document.querySelector("label[for='" + input.id + "']");
            if (label) {
                var displayName = label.textContent.trim();
                input.placeholder = displayName;
            }
        });
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
